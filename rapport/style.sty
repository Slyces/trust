% Cadres [tcolorbox]
\newtcolorbox{codebox}{
    colback=grey!2!white,
    colframe=black!25!white,
    boxrule=1px,
    fuzzy halo=2pt with grey!25!white,
    bottom=5pt, top=5pt,
    grow to left by = -0.5cm,
    grow to right by =-0.5cm,
    breakable
}

\newtcolorbox{doublecodebox}[1][]{
    sidebyside,
    title=#1,
    colback=grey!2!white,
    colframe=black!25!white,
    boxrule=1px,
    fuzzy halo=2pt with grey!25!white,
    bottom=5pt, top=5pt,
    grow to left by = -0.5cm,
    grow to right by =-0.5cm
}

